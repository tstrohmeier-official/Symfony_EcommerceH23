{% extends 'core/base.html.twig' %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block content %}
<div class="container" style="min-height: 75vh;">
	<div class="row my-5">
		<div class="col-lg-8 mx-auto panel p-3">
			<p>Already have an account with us ? 
				<a href="{{ path('route_login') }}">Click here to login !</a>
			</p>
			<h1 class="title-site">Account creation</h1>
			{% for flash in app.flashes('register')%}
				<div class="alert my-3 {{ flash.color }}">{{ flash.content }}</div>
			{% endfor %}
			{{ form_start(registrationForm, {'attr': {'class': 'needs-validation-register', 'novalidate': 'novalidate' }}) }}
			<div class="row">
				<div class="col-6">
					{{ form_row(registrationForm.email, {'attr': {'class': 'txtEmail'}}) }}
				</div>
                <div class="col-6">
					{{ form_row(registrationForm.phone, {'attr': {'class': 'txtPhone'}}) }}
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					{{ form_row(registrationForm.lastName) }}
				</div>
				<div class="col-6">
					{{ form_row(registrationForm.firstName) }}
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					{{ form_row(registrationForm.password.first) }}
				</div>
				<div class="col-6">
					{{ form_row(registrationForm.password.second) }}
				</div>
			</div>
            <div class="row">
				<div class="col-6">
					{{ form_row(registrationForm.address, {'attr': {'class': 'txtAddress'}}) }}
                </div>
                <div class="col-6">
					{{ form_row(registrationForm.town) }}
                </div>
			</div>
                        <div class="row">
				<div class="col-6">
					{{ form_row(registrationForm.postalCode, {'attr': {'class': 'txtPostalCode'}}) }}
                </div>
                <div class="col-6">
					{{ form_row(registrationForm.province) }}
                </div>
			</div>
			<div class="d-flex justify-content-center">
				{{ form_row(registrationForm.create) }}
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
</div>
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('styles/login.css') }}">
	<link rel="stylesheet" href="{{ asset('styles/base.css') }}">
{% endblock %}

{% block javascripts %}
	<script defer src="https://cdn.jsdelivr.net/npm/jquery-mask-plugin@1.14.16/dist/jquery.mask.min.js"></script>
	<script defer src="{{ asset('scripts/register.js')}}"></script>
{% endblock %}
